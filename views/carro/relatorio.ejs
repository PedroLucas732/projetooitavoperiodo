<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Relatório de Carros</title>
    <%- include("../partials/cabecalho.ejs"); %>
</head>
<body>
    <div class="container">
        <div><a href="/carros/cadastrar" class="btn btn-success">Cadastrar</a></div>
        <h2>Relatório de Carros</h2>

        <% if(status=="1"){ %>
            <div class="alert alert-success alert-dismissible">
                Carro cadastrado com <b>sucesso!</b>
                <button type="button" class="btn-close" data-bs-dismiss="alert" slot="end"></button><br>
            </div>
        <% } else if(status=="2"){ %>
            <div class="alert alert-danger alert-dismissible">
                Carro removido com <b>sucesso!</b>
                <button type="button" class="btn-close" data-bs-dismiss="alert" slot="end"></button><br>
            </div>
        <% } else if(status=="3"){ %>
            <div class="alert alert-warning alert-dismissible">
                Carro atualizado com <b>sucesso!</b>
                <button type="button" class="btn-close" data-bs-dismiss="alert" slot="end"></button><br>
            </div>
        <% }; %>

        <table class="table table-striped">
            <tr>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Placa</th>
                <th>Detalhar</th>
                <th>Atualizar</th>
                <th>Excluir</th>
            </tr>
            <% for(const x of carros){ %>
                <tr>
                    <td><div><%= x.marca %></div></td>
                    <td><div><%= x.modelo %></div></td>
                    <td><div><%= x.placa %></div></td>
                    <td><a href="/carros/<%= x._id %>" class="btn btn-info">Detalhar</a></td>
                    <td><a href="/carros/atualizar/<%= x._id %>" class="btn btn-warning">Atualizar</a></td>
                    <td><a onclick="return confirm('Deseja realmente excluir esse carro?')" href="/carros/remover/<%= x._id %>" class="btn btn-danger">Excluir</a></td>
                </tr>
            <% }; %>
        </table>

        <br>
        <div><a href="/" class="btn btn-primary">Página Inicial</a></div>
    </div>

    <%- include("../partials/rodape.ejs"); %>
</body>
</html>
